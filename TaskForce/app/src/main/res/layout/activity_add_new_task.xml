<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F3F4F6"
    tools:context=".AddNewTask">

    <!-- Titlu task -->
    <EditText
        android:id="@+id/newTaskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#CBD5E1"
        android:elevation="2dp"
        android:hint="Task title"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#111827"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Detalii -->
    <EditText
        android:id="@+id/newTaskDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Details"
        android:inputType="textMultiLine"
        android:padding="14dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#CBD5E1"
        android:textColor="#111827"
        android:textSize="16sp"
        android:minHeight="80dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/newTaskTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RadioGroup pentru atribuirea taskului -->
    <RadioGroup
        android:id="@+id/assignRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/newTaskDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/assignMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atribui pentru mine"
            android:checked="true"
            android:textColor="#111827"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/assignSomeone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atribui pentru cineva din grup"
            android:textColor="#111827"
            android:textSize="14sp" />

    </RadioGroup>

    <!-- EditText pentru email destinatar -->
    <EditText
        android:id="@+id/assignedEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Email destinatar"
        android:inputType="textEmailAddress"
        android:visibility="gone"
        android:padding="14dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#CBD5E1"
        android:textColor="#111827"
        android:textSize="16sp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/assignRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RadioGroup pentru importanta taskului -->
    <RadioGroup
        android:id="@+id/importanceRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/assignedEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/importance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:checked="true"
            android:textColor="#16A34A"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/importance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#3B82F6"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/importance3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#F59E0B"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/importance4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#EF4444"
            android:textSize="14sp" />

    </RadioGroup>

    <!-- Buton salvare task -->
    <Button
        android:id="@+id/saveTaskBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Save task"
        android:backgroundTint="#10B981"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="14dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/importanceRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
