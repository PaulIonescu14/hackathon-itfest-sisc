<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/task_stack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:clipToOutline="true"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Editable Task Title -->
        <EditText
            android:id="@+id/TaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#F9FAFB"
            android:padding="14dp"
            android:textSize="20sp"
            android:hint="Title"
            android:textColor="#111827"
            android:inputType="text"
            android:gravity="start"/>

        <!-- Importance RadioGroup -->
        <RadioGroup
            android:id="@+id/TaskImportance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/importance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:checked="true"
                android:textColor="#111827"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/importance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#111827"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/importance3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#111827"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/importance4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#111827"
                android:padding="8dp"/>
        </RadioGroup>

        <!-- Editable Notes -->
        <EditText
            android:id="@+id/TaskNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes"
            android:textSize="16sp"
            android:padding="14dp"
            android:background="#F9FAFB"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="24dp"
            android:textColor="#111827"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonGoBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Go Back"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp"
                app:backgroundTint="#3B82F6"
                android:layout_marginEnd="8dp"
                android:padding="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRemove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remove Task"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp"
                app:backgroundTint="#3B82F6"
                android:layout_marginStart="8dp"
                android:padding="12dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
